{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üß™ Start Test Watch Mode",
            "type": "shell",
            "command": "npm run test:watch",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "‚úÖ Run All Tests",
            "type": "shell",
            "command": "npm test",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "üöÄ Dev Server with TypeScript Problem Matcher",
            "type": "shell",
            "command": "npm run dev",
            "problemMatcher": {
                "owner": "typescript",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": [
                    {
                        "regexp": "^(.+):(\\d+):(\\d+)$",
                        "file": 1,
                        "line": 2,
                        "column": 3
                    },
                    {
                        "regexp": "^Type error: (.+)$",
                        "message": 1
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "‚óã Compiling",
                    "endsPattern": "(‚úì Compiled|Failed to compile)"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false
            },
            "isBackground": true
        },
        {
            "label": "üìä Check Vercel Deployment Status",
            "type": "shell",
            "command": "npx vercel ls --scope ${input:vercelTeam}",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "üìã Show Latest Vercel Build Logs",
            "type": "shell",
            "command": "npx vercel logs --follow --scope ${input:vercelTeam}",
            "problemMatcher": {
                "owner": "vercel",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+)\\s*Type error: (.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "üîç Check Latest Vercel Deployment",
            "type": "shell",
            "command": "node scripts/check-vercel-deploy.js",
            "problemMatcher": {
                "owner": "vercel-build",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+):\\s*error:\\s*(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "üöÄ Deploy and Auto-Check Vercel",
            "type": "shell",
            "command": "sh scripts/deploy-and-check.sh",
            "problemMatcher": {
                "owner": "vercel-deploy",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+):\\s*error:\\s*(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "showReuseMessage": false
            }
        }
    ],
    "inputs": [
        {
            "id": "vercelTeam",
            "type": "promptString",
            "description": "Enter your Vercel team/username",
            "default": ""
        }
    ]
}

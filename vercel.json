{
  "crons": [
    {
      "path": "/api/cron/generate-instances",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/update-instance-status",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/generate-summaries",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/sync-bot-logs",
      "schedule": "0 6 * * *"
    }
  ],
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "github": {
    "enabled": true,
    "autoAlias": true,
    "silent": false,
    "autoJobCancelation": true
  }
}

